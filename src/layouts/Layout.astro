---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Toaster from '../components/Toaster.tsx';
import '../styles/globals.css';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const { 
	title = 'EmitenHub - Berita Ekonomi & Analisis Pasar',
	description = 'EmitenHub.com - Portal berita ekonomi, saham, dan analisis pasar terpercaya',
	keywords = 'berita ekonomi, saham, pasar modal, analisis finansial, investasi'
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logofavico.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="EmitenHub" />
		<meta name="publisher" content="EmitenHub" />
		<meta name="theme-color" content="#2563eb" />
		<title>{title}</title>
		
		<!-- Preconnect to external domains for better performance (early connection) -->
		<!-- Removed Google Fonts preconnect - using self-hosted fonts now -->
		<link rel="preconnect" href="https://aitfpijkletoyuxujmnc.supabase.co" crossorigin>
		<link rel="preconnect" href={Astro.url.origin} crossorigin>
		<link rel="dns-prefetch" href="https://aitfpijkletoyuxujmnc.supabase.co" />
		<link rel="dns-prefetch" href="https://supabase.co" />
		<link rel="dns-prefetch" href="https://connect.facebook.net" />
		<link rel="dns-prefetch" href="https://www.google-analytics.com" />
		<link rel="dns-prefetch" href="https://static.hotjar.com" />
		<link rel="dns-prefetch" href="https://static.cloudflareinsights.com" />
		<!-- Jangan preconnect ke pintu.co.id - akan di-load lazy -->
		
		<!-- Preload critical font files untuk LCP improvement -->
		<!-- Regular weight (400) adalah yang paling sering digunakan -->
		<link rel="preload" href="/fonts/inter-v20-latin-regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
		<link rel="preload" href="/fonts/inter-v20-latin-500.woff2" as="font" type="font/woff2" crossorigin="anonymous">
		
		<!-- Load self-hosted font CSS with font-display: optional to prevent CLS -->
		<!-- Use media="print" trick to load asynchronously, then switch to "all" -->
		<!-- font-display: optional prevents layout shift by using fallback if font not ready -->
		<link rel="stylesheet" href="/fonts/inter.css" media="print" onload="this.media='all'">
		<noscript>
			<link rel="stylesheet" href="/fonts/inter.css">
		</noscript>
		
		<!-- Defer non-critical CSS loading untuk mengurangi render blocking -->
		<script is:inline>
			// Defer CSS loading untuk non-critical CSS
			// Run immediately untuk catch Astro-injected CSS before render
			(function() {
				// Function to defer a CSS link
				function deferCSSLink(link) {
					if (link.hasAttribute('data-deferred')) return;
					link.setAttribute('media', 'print');
					link.setAttribute('onload', "this.media='all';this.setAttribute('data-deferred','true')");
					link.setAttribute('data-deferred', 'true');
					// Fallback for browsers that don't support onload
					if (!link.onload) {
						link.onload = function() {
							this.media = 'all';
							this.setAttribute('data-deferred', 'true');
						};
					}
				}
				
				// Intercept link elements before they block render
				const observer = new MutationObserver(function(mutations) {
					mutations.forEach(function(mutation) {
						mutation.addedNodes.forEach(function(node) {
							if (node.nodeType === 1 && node.tagName === 'LINK' && node.rel === 'stylesheet') {
								const href = node.getAttribute('href');
								// Defer vendor CSS (non-critical)
								if (href && href.includes('/_astro/') && (href.includes('vendor') || href.includes('chunk'))) {
									deferCSSLink(node);
								}
							}
						});
					});
				});
				
				// Start observing immediately, before DOM is ready
				if (document.head) {
					observer.observe(document.head, { childList: true, subtree: true });
				} else {
					// If head doesn't exist yet, wait for it
					const headObserver = new MutationObserver(function() {
						if (document.head) {
							observer.observe(document.head, { childList: true, subtree: true });
							headObserver.disconnect();
						}
					});
					headObserver.observe(document.documentElement, { childList: true });
				}
				
				// Also handle existing links immediately
				function deferExistingCSS() {
					if (!document.head) return;
					document.querySelectorAll('link[rel="stylesheet"]').forEach(link => {
						const href = link.getAttribute('href');
						if (href && href.includes('/_astro/') && (href.includes('vendor') || href.includes('chunk'))) {
							deferCSSLink(link);
						}
					});
				}
				
				// Run immediately and also on DOMContentLoaded
				deferExistingCSS();
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', deferExistingCSS);
				}
			})();
		</script>
		
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="EmitenHub RSS Feed" href="/rss.xml" />
		<link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
		
		<link rel="manifest" href="/site.webmanifest" />
		<slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased" style="min-height: 100vh; width: 100%; position: relative;">
		<Header />
		<main class="min-h-screen">
			<slot />
		</main>
		<Footer />
			<!-- <Toaster client:idle /> -->
			
			<!-- Loading indicator untuk initial page load -->
		<script is:inline>
			// Hide loading indicator setelah page load
			(function() {
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', function() {
						// Page sudah loaded, hide loading indicator jika ada
						const loader = document.getElementById('initial-loader');
						if (loader) {
							loader.style.opacity = '0';
							setTimeout(() => loader.remove(), 300);
						}
					});
				} else {
					// DOM already ready
					const loader = document.getElementById('initial-loader');
					if (loader) loader.remove();
				}
			})();
			
			// Detect font load untuk prevent CLS - run immediately
			(function() {
				// Check if fonts are already loaded
				if ('fonts' in document) {
					if (document.fonts.status === 'loaded') {
						document.documentElement.classList.add('fonts-loaded');
					} else {
						// Wait for fonts to load
						document.fonts.ready.then(function() {
							document.documentElement.classList.add('fonts-loaded');
						}).catch(function() {
							// Fallback if fonts fail to load
							setTimeout(function() {
								document.documentElement.classList.add('fonts-loaded');
							}, 100);
						});
					}
				} else {
					// Fallback: assume fonts loaded after short delay
					setTimeout(function() {
						document.documentElement.classList.add('fonts-loaded');
					}, 100);
				}
			})();
		</script>
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
		/* Use system font as primary to prevent CLS */
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		/* Prevent font-related layout shifts */
		font-size-adjust: 0.52; /* Match Inter's aspect ratio */
	}
	
	/* Prevent layout shift during font load */
	body {
		/* Reserve space to prevent shift */
		min-height: 100vh;
		/* Use system font initially, Inter will load later */
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		/* Match Inter's metrics to prevent shift - Inter has aspect ratio of ~0.52 */
		/* font-size-adjust helps maintain consistent text size when font swaps */
		font-size-adjust: 0.52;
		/* Prevent layout shifts from content changes */
		overflow-x: hidden;
		position: relative;
		/* Ensure body doesn't shift when content loads */
		width: 100%;
		/* Keep consistent line-height to prevent shifts */
		line-height: 1.5;
		/* Prevent body from shifting when fonts load */
		will-change: auto;
	}
	
	/* Apply Inter font once loaded - with size-adjust to match metrics */
	/* Only apply if font is actually loaded to prevent shift */
	.fonts-loaded body {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		font-size-adjust: 0.52; /* Inter's aspect ratio - prevents layout shift */
		line-height: 1.5; /* Keep consistent line-height */
	}
	
	/* Ensure main content doesn't cause body shifts */
	main {
		min-height: calc(100vh - 200px); /* Reserve space for header/footer */
	}
</style>
