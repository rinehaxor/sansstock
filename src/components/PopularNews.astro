---
import { Image } from 'astro:assets';
import { supabase } from '../db/supabase';

// Fetch popular articles - most viewed articles that are still relevant
// Since we track total views_count (not per day), we'll prioritize:
// 1. Articles with highest views_count (popular overall)
// 2. Still relevant (published within reasonable timeframe, e.g., last 90 days)
// 3. This approach captures articles that are "trending" - either new with high views or older articles still getting views
const currentArticleId = Astro.props.currentArticleId || null;

// Calculate date 90 days ago - articles within this range are considered "relevant"
// This allows both new popular articles and older articles that are still getting views
const ninetyDaysAgo = new Date();
ninetyDaysAgo.setDate(ninetyDaysAgo.getDate() - 90);
const ninetyDaysAgoISO = ninetyDaysAgo.toISOString();

// Fetch articles with views, ordered by views_count (most popular first)
// Filter by published date within last 90 days to keep it relevant
let query = supabase
   .from('articles')
   .select(`
      id,
      title,
      slug,
      thumbnail_url,
      published_at,
      views_count,
      categories:category_id (
         id,
         name,
         slug
      )
   `)
   .eq('status', 'published')
   .gte('published_at', ninetyDaysAgoISO) // Published within last 90 days (still relevant)
   .not('views_count', 'is', null)
   .gt('views_count', 0) // Must have views
   .order('views_count', { ascending: false }) // Order by views_count descending (most popular first)
   .limit(5);

if (currentArticleId) {
   query = query.neq('id', currentArticleId);
}

const { data: articles } = await query;

let popularArticles = articles || [];

// If we don't have enough articles from last 90 days, expand to all time
// This ensures we always have 5 popular articles if available
if (!popularArticles || popularArticles.length < 5) {
   const remaining = 5 - (popularArticles?.length || 0);
   
   let supplementalQuery = supabase
      .from('articles')
      .select(`
         id,
         title,
         slug,
         thumbnail_url,
         published_at,
         views_count,
         categories:category_id (
            id,
            name,
            slug
         )
      `)
      .eq('status', 'published')
      .not('views_count', 'is', null)
      .gt('views_count', 0)
      .order('views_count', { ascending: false })
      .limit(remaining);
   
   if (currentArticleId) {
      const excludeIds = [currentArticleId, ...(popularArticles?.map((a: any) => a.id) || [])];
      if (excludeIds.length > 1) {
         // Use filter to exclude multiple IDs
         excludeIds.forEach((id: number) => {
            supplementalQuery = supplementalQuery.neq('id', id);
         });
      } else if (excludeIds.length === 1) {
         supplementalQuery = supplementalQuery.neq('id', excludeIds[0]);
      }
   } else {
      const excludeIds = popularArticles?.map((a: any) => a.id) || [];
      excludeIds.forEach((id: number) => {
         supplementalQuery = supplementalQuery.neq('id', id);
      });
   }
   
   const { data: supplementalArticles } = await supplementalQuery;
   
   if (supplementalArticles && supplementalArticles.length > 0) {
      // Combine and take top 5
      const combined = [...(popularArticles || []), ...supplementalArticles];
      // Sort by views_count and take top 5
      combined.sort((a: any, b: any) => (b.views_count || 0) - (a.views_count || 0));
      popularArticles = combined.slice(0, 5);
   }
}

// If still no articles, fallback to recently published
if (!popularArticles || popularArticles.length === 0) {
   const fallbackQuery = supabase
      .from('articles')
      .select(`
         id,
         title,
         slug,
         thumbnail_url,
         published_at,
         views_count,
         categories:category_id (
            id,
            name,
            slug
         )
      `)
      .eq('status', 'published')
      .order('published_at', { ascending: false })
      .limit(5);
   
   if (currentArticleId) {
      fallbackQuery.neq('id', currentArticleId);
   }
   
   const { data: fallbackArticles } = await fallbackQuery;
   popularArticles = fallbackArticles || [];
}

// Helper function untuk get alt text dari media_metadata
async function getAltText(thumbnailUrl: string | null): Promise<string | null> {
  if (!thumbnailUrl) return null;
  
  try {
    const { data: mediaMetadata } = await supabase
      .from('media_metadata')
      .select('alt_text')
      .eq('file_url', thumbnailUrl)
      .single();
    
    return mediaMetadata?.alt_text || null;
  } catch (e) {
    return null;
  }
}

// Get alt text untuk semua artikel dari media_metadata
const articlesWithAltText = await Promise.all(
  (popularArticles || []).map(async (article: any) => {
    const altText = await getAltText(article.thumbnail_url);
    return {
      ...article,
      thumbnail_alt: altText,
    };
  })
);

// Helper function to format time ago
function getTimeAgo(dateString: string): string {
   const date = new Date(dateString);
   const now = new Date();
   const diffInSeconds = Math.floor((now.getTime() - date.getTime()) / 1000);

   if (diffInSeconds < 60) return 'Baru saja';
   if (diffInSeconds < 3600) return `${Math.floor(diffInSeconds / 60)} menit yang lalu`;
   if (diffInSeconds < 86400) return `${Math.floor(diffInSeconds / 3600)} jam yang lalu`;
   if (diffInSeconds < 2592000) return `${Math.floor(diffInSeconds / 86400)} hari yang lalu`;
   return date.toLocaleDateString('id-ID');
}
---

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
	<h3 class="text-lg font-bold text-gray-900 mb-4">Populer</h3>
	
	{articlesWithAltText && articlesWithAltText.length > 0 ? (
		<div class="space-y-3">
			{articlesWithAltText.map((article: any) => (
				<a href={`/artikel/${article.slug}`} class="block group">
					<div class="flex gap-3">
						{article.thumbnail_url ? (
							<div class="flex-shrink-0">
								<Image 
									src={article.thumbnail_url} 
									alt={article.thumbnail_alt || article.title}
									width={64}
									height={48}
									class="w-16 h-12 rounded-lg object-cover"
									loading="lazy"
									format="webp"
								/>
							</div>
						) : (
							<div class="flex-shrink-0 w-16 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
								<svg class="w-6 h-6 text-white opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
								</svg>
							</div>
						)}
						<div class="flex-1 min-w-0">
							<h4 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 line-clamp-2 leading-snug">
								{article.title}
							</h4>
							{article.categories && (article.categories as any).name && (
								<p class="text-xs text-blue-600 mt-1 font-medium">
									{(article.categories as any).name}
								</p>
							)}
						</div>
					</div>
				</a>
			))}
		</div>
	) : (
		<p class="text-sm text-gray-500">Belum ada artikel populer.</p>
	)}
</div>
