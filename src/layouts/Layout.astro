---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Toaster from '../components/Toaster.tsx';
import '../styles/globals.css';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const { 
	title = 'EmitenHub - Berita Ekonomi & Analisis Pasar',
	description = 'EmitenHub.com - Portal berita ekonomi, saham, dan analisis pasar terpercaya',
	keywords = 'berita ekonomi, saham, pasar modal, analisis finansial, investasi'
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logofavico.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="EmitenHub" />
		<meta name="publisher" content="EmitenHub" />
		<meta name="theme-color" content="#2563eb" />
		<title>{title}</title>
		
		<!-- Preconnect to external domains for better performance (early connection) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preconnect" href="https://aitfpijkletoyuxujmnc.supabase.co" crossorigin>
		<link rel="dns-prefetch" href="https://supabase.co" />
		<link rel="dns-prefetch" href="https://connect.facebook.net" />
		<link rel="dns-prefetch" href="https://www.google-analytics.com" />
		<link rel="dns-prefetch" href="https://static.hotjar.com" />
		<link rel="dns-prefetch" href="https://static.cloudflareinsights.com" />
		<!-- Jangan preconnect ke pintu.co.id - akan di-load lazy -->
		
		<!-- Defer non-critical CSS loading untuk mengurangi render blocking -->
		<script is:inline>
			// Defer CSS loading untuk non-critical CSS
			// Run immediately untuk catch Astro-injected CSS before render
			(function() {
				// Intercept link elements before they block render
				const observer = new MutationObserver(function(mutations) {
					mutations.forEach(function(mutation) {
						mutation.addedNodes.forEach(function(node) {
							if (node.nodeType === 1 && node.tagName === 'LINK' && node.rel === 'stylesheet') {
								const href = node.getAttribute('href');
								// Defer vendor CSS (non-critical)
								if (href && href.includes('/_astro/') && (href.includes('vendor') || href.includes('chunk'))) {
									node.setAttribute('media', 'print');
									node.setAttribute('onload', "this.media='all'");
									// Fallback
									const noscript = document.createElement('noscript');
									const clone = node.cloneNode(true);
									clone.removeAttribute('media');
									clone.removeAttribute('onload');
									noscript.appendChild(clone);
									node.parentNode.insertBefore(noscript, node.nextSibling);
								}
							}
						});
					});
				});
				
				// Start observing before DOM is ready
				observer.observe(document.head, { childList: true, subtree: true });
				
				// Also handle existing links
				function deferExistingCSS() {
					document.querySelectorAll('link[rel="stylesheet"]').forEach(link => {
						const href = link.getAttribute('href');
						if (href && href.includes('/_astro/') && (href.includes('vendor') || href.includes('chunk')) && !link.hasAttribute('data-deferred')) {
							link.setAttribute('media', 'print');
							link.setAttribute('onload', "this.media='all';this.setAttribute('data-deferred','true')");
							link.setAttribute('data-deferred', 'true');
						}
					});
				}
				
				// Run immediately
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', deferExistingCSS);
				} else {
					deferExistingCSS();
				}
			})();
		</script>
		
		<!-- Preload font CSS untuk faster loading -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		</noscript>
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="EmitenHub RSS Feed" href="/rss.xml" />
		
		<link rel="manifest" href="/site.webmanifest" />
		<slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased">
		<Header />
		<main class="min-h-screen">
			<slot />
		</main>
		<Footer />
		<Toaster client:idle />
		
		<!-- Loading indicator untuk initial page load -->
		<script is:inline>
			// Hide loading indicator setelah page load
			(function() {
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', function() {
						// Page sudah loaded, hide loading indicator jika ada
						const loader = document.getElementById('initial-loader');
						if (loader) {
							loader.style.opacity = '0';
							setTimeout(() => loader.remove(), 300);
						}
					});
				} else {
					// DOM already ready
					const loader = document.getElementById('initial-loader');
					if (loader) loader.remove();
				}
			})();
		</script>
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>
