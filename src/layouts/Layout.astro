---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Toaster from '../components/Toaster.tsx';
import '../styles/globals.css';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const { 
	title = 'EmitenHub - Berita Ekonomi & Analisis Pasar',
	description = 'EmitenHub.com - Portal berita ekonomi, saham, dan analisis pasar terpercaya',
	keywords = 'berita ekonomi, saham, pasar modal, analisis finansial, investasi'
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logofavico.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="EmitenHub" />
		<meta name="publisher" content="EmitenHub" />
		<meta name="theme-color" content="#2563eb" />
		<title>{title}</title>
		
		<!-- Preconnect to external domains for better performance (early connection) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preconnect" href="https://aitfpijkletoyuxujmnc.supabase.co" crossorigin>
		<link rel="dns-prefetch" href="https://supabase.co" />
		<!-- Jangan preconnect ke pintu.co.id - akan di-load lazy -->
		
		<!-- Defer non-critical CSS loading -->
		<script is:inline>
			// Defer CSS loading untuk non-critical CSS
			// Run after DOM ready untuk catch Astro-injected CSS
			(function() {
				function deferCSS() {
					const links = document.querySelectorAll('link[rel="stylesheet"]:not([data-deferred])');
					links.forEach(link => {
						const href = link.getAttribute('href');
						// Skip inline styles, fonts, dan yang sudah di-defer
						if (href && !href.startsWith('data:') && !href.includes('fonts.googleapis.com') && !link.hasAttribute('data-deferred')) {
							link.setAttribute('media', 'print');
							link.setAttribute('onload', "this.media='all';this.setAttribute('data-deferred','true')");
							link.setAttribute('data-deferred', 'true');
							// Fallback untuk browsers tanpa onload support
							if (!link.nextSibling || link.nextSibling.tagName !== 'NOSCRIPT') {
								const noscript = document.createElement('noscript');
								const clone = link.cloneNode(true);
								clone.removeAttribute('media');
								clone.removeAttribute('onload');
								noscript.appendChild(clone);
								link.parentNode.insertBefore(noscript, link.nextSibling);
							}
						}
					});
				}
				
				// Run immediately untuk catch existing links
				deferCSS();
				
				// Run after DOM ready untuk catch Astro-injected CSS
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', deferCSS);
				} else {
					// DOM already ready, run after a short delay untuk catch Astro CSS
					setTimeout(deferCSS, 0);
				}
			})();
		</script>
		
		<!-- Preload font CSS untuk faster loading -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		</noscript>
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="EmitenHub RSS Feed" href="/rss.xml" />
		
		<link rel="manifest" href="/site.webmanifest" />
		<slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased">
		<Header />
		<main class="min-h-screen">
			<slot />
		</main>
		<Footer />
		<Toaster client:idle />
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>
