---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Toaster from '../components/Toaster.tsx';
import '../styles/globals.css';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const { 
	title = 'EmitenHub - Berita Ekonomi & Analisis Pasar',
	description = 'EmitenHub.com - Portal berita ekonomi, saham, dan analisis pasar terpercaya',
	keywords = 'berita ekonomi, saham, pasar modal, analisis finansial, investasi'
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logofavico.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="EmitenHub" />
		<meta name="publisher" content="EmitenHub" />
		<meta name="theme-color" content="#2563eb" />
		<title>{title}</title>
		
		<!-- Preconnect to external domains for better performance (early connection) -->
		<!-- Removed Google Fonts preconnect - using self-hosted fonts now -->
		<link rel="preconnect" href={Astro.url.origin} crossorigin>
		<link rel="dns-prefetch" href={Astro.url.origin} />
		<link rel="preconnect" href="https://aitfpijkletoyuxujmnc.supabase.co" crossorigin>
		<link rel="dns-prefetch" href="https://aitfpijkletoyuxujmnc.supabase.co" />
		<link rel="dns-prefetch" href="https://supabase.co" />
		<link rel="dns-prefetch" href="https://connect.facebook.net" />
		<link rel="dns-prefetch" href="https://www.google-analytics.com" />
		<link rel="dns-prefetch" href="https://static.hotjar.com" />
		<link rel="dns-prefetch" href="https://static.cloudflareinsights.com" />
		<!-- Jangan preconnect ke pintu.co.id - akan di-load lazy -->
		
		<!-- Preload critical font files untuk LCP improvement -->
		<!-- Regular weight (400) adalah yang paling sering digunakan -->
		<link rel="preload" href="/fonts/inter-v20-latin-regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
		<link rel="preload" href="/fonts/inter-v20-latin-500.woff2" as="font" type="font/woff2" crossorigin="anonymous">
		
		<!-- Preload non-critical font weights with low priority to avoid blocking -->
		<!-- Font 600 and 700 are used for styling but not critical for initial render -->
		<link rel="preload" href="/fonts/inter-v20-latin-600.woff2" as="font" type="font/woff2" crossorigin="anonymous" fetchpriority="low">
		<link rel="preload" href="/fonts/inter-v20-latin-700.woff2" as="font" type="font/woff2" crossorigin="anonymous" fetchpriority="low">
		
		<!-- Inline font CSS to prevent render-blocking request -->
		<!-- font-display: optional means browser will use fallback if font not ready in 100ms -->
		<style is:inline>
			/* Inter Font - Self-hosted untuk mengurangi CLS dan dependency ke CDN */
			@font-face {
			  font-family: 'Inter';
			  font-style: normal;
			  font-weight: 300;
			  font-display: optional; /* Prevent layout shift - use fallback if not ready */
			  src: url('/fonts/inter-v20-latin-300.woff2') format('woff2');
			  ascent-override: 90%;
			  descent-override: 22%;
			  line-gap-override: 0%;
			}

			@font-face {
			  font-family: 'Inter';
			  font-style: normal;
			  font-weight: 400;
			  font-display: optional;
			  src: url('/fonts/inter-v20-latin-regular.woff2') format('woff2');
			  ascent-override: 90%;
			  descent-override: 22%;
			  line-gap-override: 0%;
			}

			@font-face {
			  font-family: 'Inter';
			  font-style: normal;
			  font-weight: 500;
			  font-display: optional;
			  src: url('/fonts/inter-v20-latin-500.woff2') format('woff2');
			  ascent-override: 90%;
			  descent-override: 22%;
			  line-gap-override: 0%;
			}

			@font-face {
			  font-family: 'Inter';
			  font-style: normal;
			  font-weight: 600;
			  font-display: optional;
			  src: url('/fonts/inter-v20-latin-600.woff2') format('woff2');
			  ascent-override: 90%;
			  descent-override: 22%;
			  line-gap-override: 0%;
			}

			@font-face {
			  font-family: 'Inter';
			  font-style: normal;
			  font-weight: 700;
			  font-display: optional;
			  src: url('/fonts/inter-v20-latin-700.woff2') format('woff2');
			  ascent-override: 90%;
			  descent-override: 22%;
			  line-gap-override: 0%;
			}
		</style>
		
		<!-- Defer non-critical CSS and JS loading untuk mengurangi render blocking -->
		<script is:inline>
			// Defer CSS loading untuk non-critical CSS
			// Defer JS loading untuk non-critical scripts (audit, a11y, etc)
			// Run immediately untuk catch Astro-injected resources before render
			(function() {
				// Function to defer a CSS link
				function deferCSSLink(link) {
					if (link.hasAttribute('data-deferred')) return;
					link.setAttribute('media', 'print');
					link.setAttribute('onload', "this.media='all';this.setAttribute('data-deferred','true')");
					link.setAttribute('data-deferred', 'true');
					// Fallback for browsers that don't support onload
					if (!link.onload) {
						link.onload = function() {
							this.media = 'all';
							this.setAttribute('data-deferred', 'true');
						};
					}
				}
				
				// Function to defer a script
				function deferScript(script) {
					if (script.hasAttribute('data-deferred')) return;
					// Defer non-critical scripts (audit, a11y, aria-query)
					const src = script.getAttribute('src') || '';
					if (src.includes('audit') || src.includes('a11y') || src.includes('aria-query') || src.includes('axobject-query')) {
						script.setAttribute('defer', '');
						script.setAttribute('data-deferred', 'true');
					}
				}
				
				// Intercept link and script elements before they block render
				const observer = new MutationObserver(function(mutations) {
					mutations.forEach(function(mutation) {
						mutation.addedNodes.forEach(function(node) {
							if (node.nodeType === 1) {
								if (node.tagName === 'LINK' && node.rel === 'stylesheet') {
									const href = node.getAttribute('href');
									// Defer vendor CSS (non-critical) - jangan defer semua CSS karena bisa break styling
									if (href && href.includes('/_astro/') && (href.includes('vendor') || href.includes('chunk'))) {
										deferCSSLink(node);
									}
								} else if (node.tagName === 'SCRIPT') {
									deferScript(node);
								}
							}
						});
					});
				});
				
				// Start observing immediately, before DOM is ready
				if (document.head) {
					observer.observe(document.head, { childList: true, subtree: true });
				} else {
					// If head doesn't exist yet, wait for it
					const headObserver = new MutationObserver(function() {
						if (document.head) {
							observer.observe(document.head, { childList: true, subtree: true });
							headObserver.disconnect();
						}
					});
					headObserver.observe(document.documentElement, { childList: true });
				}
				
				// Also handle existing links and scripts immediately
				function deferExistingResources() {
					if (!document.head) return;
					// Defer vendor CSS (non-critical) - jangan defer semua CSS
					document.querySelectorAll('link[rel="stylesheet"]').forEach(link => {
						const href = link.getAttribute('href');
						if (href && href.includes('/_astro/') && (href.includes('vendor') || href.includes('chunk'))) {
							deferCSSLink(link);
						}
					});
					// Defer scripts
					document.querySelectorAll('script[src]').forEach(script => {
						deferScript(script);
					});
				}
				
				// Run immediately and also on DOMContentLoaded
				deferExistingResources();
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', deferExistingResources);
				}
			})();
		</script>
		
		
		<!-- RSS Feed -->
		<link rel="alternate" type="application/rss+xml" title="EmitenHub RSS Feed" href="/rss.xml" />
		<link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
		
		<link rel="manifest" href="/site.webmanifest" />
		<slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 antialiased">
		<Header />
		<main class="min-h-screen">
			<slot />
		</main>
		<Footer />
			<!-- <Toaster client:idle /> -->
			
			<!-- Loading indicator untuk initial page load -->
		<script is:inline>
			// Hide loading indicator setelah page load
			(function() {
				if (document.readyState === 'loading') {
					document.addEventListener('DOMContentLoaded', function() {
						// Page sudah loaded, hide loading indicator jika ada
						const loader = document.getElementById('initial-loader');
						if (loader) {
							loader.style.opacity = '0';
							setTimeout(() => loader.remove(), 300);
						}
					});
				} else {
					// DOM already ready
					const loader = document.getElementById('initial-loader');
					if (loader) loader.remove();
				}
			})();
			
			// Detect font load untuk prevent CLS - run immediately
			// Only apply Inter font if it loads within 100ms to prevent CLS
			(function() {
				// Check if fonts are already loaded
				if ('fonts' in document) {
					// Use a timeout to prevent waiting too long
					const timeout = setTimeout(function() {
						// Font didn't load in time, keep using system font
						// Don't add fonts-loaded class to prevent shift
					}, 100);
					
					if (document.fonts.status === 'loaded') {
						clearTimeout(timeout);
						document.documentElement.classList.add('fonts-loaded');
					} else {
						// Wait for fonts to load, but with timeout
						document.fonts.ready.then(function() {
							clearTimeout(timeout);
							// Only apply if fonts loaded quickly
							if (document.fonts.check('12px Inter')) {
								document.documentElement.classList.add('fonts-loaded');
							}
						}).catch(function() {
							clearTimeout(timeout);
							// Keep system font on error
						});
					}
				}
				// If fonts API not available, keep system font
			})();
		</script>
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
		/* Use system font as primary to prevent CLS */
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		/* Prevent font-related layout shifts */
		font-size-adjust: 0.52; /* Match Inter's aspect ratio */
	}
	
	/* Prevent layout shift during font load */
	body {
		/* Reserve space to prevent shift - use fixed dimensions */
		min-height: 100vh;
		width: 100%;
		position: relative;
		/* Use system font initially, Inter will load later */
		/* Remove font-sans class to prevent Tailwind font conflict */
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		/* Match Inter's metrics to prevent shift - Inter has aspect ratio of ~0.52 */
		/* font-size-adjust helps maintain consistent text size when font swaps */
		font-size-adjust: 0.52;
		/* Prevent layout shifts from content changes */
		overflow-x: hidden;
		/* Keep consistent line-height to prevent shifts */
		line-height: 1.5;
		/* Prevent font loading from causing shifts */
		font-synthesis: none;
		/* Force GPU acceleration to prevent layout shifts */
		transform: translateZ(0);
		/* Use contain to isolate layout calculations */
		contain: layout style paint;
		/* Ensure stable dimensions */
		box-sizing: border-box;
		/* Prevent margin collapse that could cause shifts */
		margin: 0;
		padding: 0;
	}
	
	/* Apply Inter font once loaded - with size-adjust to match metrics */
	/* Only apply if font is actually loaded to prevent shift */
	/* Use font-display: optional means font might not load, so we keep system font as fallback */
	.fonts-loaded body {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		font-size-adjust: 0.52; /* Inter's aspect ratio - prevents layout shift */
		line-height: 1.5; /* Keep consistent line-height */
		/* Ensure no layout shift when font swaps */
		font-synthesis: none;
	}
	
	/* Ensure main content doesn't cause body shifts */
	main {
		min-height: calc(100vh - 200px); /* Reserve space for header/footer */
		/* Prevent layout shifts in main content */
		contain: layout;
	}
	
	/* Prevent layout shifts from header */
	header {
		contain: layout style paint;
		/* Ensure header has stable dimensions */
		min-height: 64px;
		height: 64px;
		/* Prevent layout shift during render */
		transform: translateZ(0);
		will-change: auto;
	}
</style>
