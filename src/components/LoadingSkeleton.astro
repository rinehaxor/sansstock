---
// Loading skeleton untuk initial page load
---

<div class="min-h-screen bg-gray-50">
	<!-- Header Skeleton -->
	<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center justify-between h-16">
				<div class="h-8 w-32 bg-gray-200 rounded animate-pulse"></div>
				<div class="flex gap-4">
					<div class="h-6 w-20 bg-gray-200 rounded animate-pulse"></div>
					<div class="h-6 w-20 bg-gray-200 rounded animate-pulse"></div>
				</div>
			</div>
		</div>
	</header>

	<!-- Main Content Skeleton -->
	<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<!-- Market Ticker Skeleton -->
		<div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl shadow-lg mb-8 p-6">
			<div class="h-12 bg-blue-500/30 rounded animate-pulse"></div>
		</div>

		<!-- Featured News Skeleton -->
		<div class="mb-16">
			<div class="h-8 w-48 bg-gray-200 rounded mb-6 animate-pulse"></div>
			<div class="grid md:grid-cols-3 gap-6">
				<div class="md:col-span-2">
					<div class="h-64 bg-gray-200 rounded-lg animate-pulse mb-4"></div>
					<div class="h-6 bg-gray-200 rounded w-3/4 animate-pulse mb-2"></div>
					<div class="h-4 bg-gray-200 rounded w-1/2 animate-pulse"></div>
				</div>
				<div class="space-y-4">
					<div class="h-32 bg-gray-200 rounded-lg animate-pulse"></div>
					<div class="h-32 bg-gray-200 rounded-lg animate-pulse"></div>
				</div>
			</div>
		</div>

		<!-- Market Overview Skeleton -->
		<div class="mb-16">
			<div class="h-8 w-48 bg-gray-200 rounded mb-6 animate-pulse"></div>
			<div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
				{[...Array(4)].map(() => (
					<div class="bg-white rounded-lg border border-gray-200 p-6">
						<div class="h-6 bg-gray-200 rounded w-24 mb-4 animate-pulse"></div>
						<div class="h-8 bg-gray-200 rounded w-32 mb-2 animate-pulse"></div>
						<div class="h-4 bg-gray-200 rounded w-20 animate-pulse"></div>
					</div>
				))}
			</div>
		</div>

		<!-- News List Skeleton -->
		<div class="grid lg:grid-cols-3 gap-8">
			<div class="lg:col-span-2 space-y-6">
				{[...Array(5)].map(() => (
					<div class="bg-white rounded-lg border border-gray-200 p-6">
						<div class="flex gap-4">
							<div class="h-24 w-32 bg-gray-200 rounded-lg animate-pulse flex-shrink-0"></div>
							<div class="flex-1">
								<div class="h-6 bg-gray-200 rounded w-3/4 mb-2 animate-pulse"></div>
								<div class="h-4 bg-gray-200 rounded w-full mb-2 animate-pulse"></div>
								<div class="h-4 bg-gray-200 rounded w-2/3 animate-pulse"></div>
							</div>
						</div>
					</div>
				))}
			</div>
			<div class="lg:col-span-1">
				<div class="bg-white rounded-lg border border-gray-200 p-6 mb-6">
					<div class="h-6 bg-gray-200 rounded w-32 mb-4 animate-pulse"></div>
					<div class="space-y-4">
						{[...Array(3)].map(() => (
							<div class="h-20 bg-gray-200 rounded animate-pulse"></div>
						))}
					</div>
				</div>
			</div>
		</div>
	</main>
</div>

