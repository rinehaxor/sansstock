---
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/Card';

export interface Props {
	name: string;
	value: string;
	change: string;
	changeType: 'positive' | 'negative';
	iconColor: string;
	iconBgColor: string;
}

const { name, value, change, changeType, iconColor, iconBgColor } = Astro.props;

const changeColor = changeType === 'positive' ? 'text-green-700 bg-green-100' : 'text-red-700 bg-red-100';
const changeIcon = changeType === 'positive' ? 'M7 11l5-5m0 0l5 5m-5-5v12' : 'M17 13l-5 5m0 0l-5-5m5 5V6';
---

<Card class="group hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
	<CardHeader class="pb-3">
		<div class="flex justify-between items-center">
			<div class={`w-12 h-12 ${iconBgColor} rounded-xl flex items-center justify-center`}>
				<svg class={`w-6 h-6 ${iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
				</svg>
			</div>
			<span class={`px-3 py-1 ${changeColor} text-sm font-bold rounded-full flex items-center`}>
				<svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={changeIcon}></path>
				</svg>
				{change}
			</span>
		</div>
	</CardHeader>
	<CardContent class="pt-0">
		<div class="space-y-2">
			<h3 class="text-sm font-medium text-gray-600 uppercase tracking-wide">{name}</h3>
			<div class="text-3xl font-bold text-gray-900">{value}</div>
			<div class="text-sm text-gray-600">+87.23 poin</div>
		</div>
	</CardContent>
</Card>
