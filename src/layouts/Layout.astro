---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Toaster from '../components/Toaster.tsx';
import '../styles/globals.css';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const { 
	title = 'SansStocks - Berita Ekonomi & Analisis Pasar',
	description = 'SansStocks - Portal berita ekonomi, saham, dan analisis pasar terpercaya',
	keywords = 'berita ekonomi, saham, pasar modal, analisis finansial, investasi'
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="SansStocks" />
		<meta name="publisher" content="SansStocks" />
		<meta name="theme-color" content="#2563eb" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<link rel="manifest" href="/site.webmanifest" />
		<slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased">
		<Header />
		<main class="min-h-screen">
			<slot />
		</main>
		<Footer />
		<Toaster client:load />
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>
