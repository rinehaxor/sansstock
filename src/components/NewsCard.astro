---
export interface Props {
	title: string;
	excerpt: string;
	category: string;
	categoryColor: string;
	categoryBgColor: string;
	iconColor: string;
	iconBgColor: string;
	timeAgo: string;
	author?: string;
	link: string;
	isLarge?: boolean;
}

const { 
	title, 
	excerpt, 
	category, 
	categoryColor, 
	categoryBgColor, 
	iconColor, 
	iconBgColor, 
	timeAgo, 
	author, 
	link,
	isLarge = false
} = Astro.props;
---

<article class={`${isLarge ? 'col-span-1 md:col-span-2 lg:col-span-2' : ''} bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-2 group`}>
	<div class={`${isLarge ? 'h-64 sm:h-72 md:h-80 lg:h-96' : 'h-40'} bg-gradient-to-br ${iconBgColor} flex items-center justify-center relative overflow-hidden`}>
		<div class={`absolute inset-0 bg-gradient-to-br ${categoryBgColor}`}></div>
		<svg width={isLarge ? "80 sm:90 md:100 lg:110" : "60"} height={isLarge ? "80 sm:90 md:100 lg:110" : "60"} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class={`${iconColor} relative z-10 ${isLarge ? 'w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32' : 'w-12 h-12'}`}>
			<rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
			<circle cx="8.5" cy="8.5" r="1.5"></circle>
			<polyline points="21,15 16,10 5,21"></polyline>
		</svg>
		<div class="absolute top-4 left-4">
			<span class={`inline-block ${categoryBgColor} text-white text-xs font-semibold px-3 py-1 rounded-full shadow-sm`}>
				{category}
			</span>
		</div>
	</div>
	<div class={`${isLarge ? 'p-4 sm:p-5 md:p-6 lg:p-6' : 'p-4'}`}>
		<h3 class={`font-bold ${isLarge ? 'text-xl sm:text-2xl md:text-3xl lg:text-3xl mb-3 sm:mb-4' : 'mb-2 text-lg'} leading-tight text-gray-900 group-hover:${categoryColor} transition-colors`}>
			{title}
		</h3>
		<p class={`text-gray-600 ${isLarge ? 'text-sm sm:text-base md:text-lg lg:text-lg' : 'text-sm'} leading-relaxed ${isLarge ? 'mb-4 sm:mb-5' : 'mb-3'}`}>
			{excerpt}
		</p>
		<div class="flex items-center justify-between">
			<div class={`flex gap-2 sm:gap-4 ${isLarge ? 'text-xs sm:text-sm' : 'text-xs'} text-gray-500`}>
				<span class="flex items-center">
					<svg class={`${isLarge ? 'w-3 h-3 sm:w-4 sm:h-4' : 'w-3 h-3'} mr-1`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					{timeAgo}
				</span>
				{isLarge && author && (
					<span class="flex items-center">
						<svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
						{author}
					</span>
				)}
			</div>
			<a href={link} class={`${categoryColor} hover:${categoryColor.replace('600', '700')} font-medium ${isLarge ? 'flex items-center group text-sm sm:text-base' : 'text-sm'}`}>
				{isLarge ? (
					<>
						<span class="hidden sm:inline">Baca Selengkapnya</span>
						<span class="sm:hidden">Baca</span>
						<svg class="w-3 h-3 sm:w-4 sm:h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
						</svg>
					</>
				) : (
					'Baca â†’'
				)}
			</a>
		</div>
	</div>
</article>
